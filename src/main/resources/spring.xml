<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.course.bean.Client">
        <constructor-arg type="int" value="1"/>
        <constructor-arg type="java.lang.String" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.course.loggers.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.spring.core.course.bean.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.epam.spring.core.course.bean.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="fileEventLogger" class="com.epam.spring.core.course.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.epam.spring.core.course.loggers.CacheFileEventLogger"
          destroy-method="destroy" init-method="init">
        <constructor-arg value="target/events_log.txt"/>
        <constructor-arg value="5"/>
    </bean>

</beans>